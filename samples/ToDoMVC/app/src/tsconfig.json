{
  "compilerOptions": {
    "lib": [ "es5", "dom" ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "noResolve": false,
    "diagnostics": true,
    "listFiles": false
  },

    "files": [
        "./controllers/todoctrl.ts",
        "./directives/todoblur.ts",
        "./directives/todofocus.ts",
        "./interfaces/itodoscope.ts",
        "./interfaces/itodostorage.ts",
        "./models/todoitem.ts",
        "./services/todostorage.ts",
        "app.ts"
    ],

    "bundles": {
        "app": {
            "files": [ "app.ts" ],
            "config": { 
                "outDir": "./bundles"  
            }
        }
    }
}